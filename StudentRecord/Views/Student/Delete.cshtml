@model Student
<form method="post">
    <input asp-for="StudentId" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text text-light">Delete Student</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="StudentName" class="p-0"></label>
            <input asp-for="StudentName"disabled class="form-control"></input>
           
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="StudentClass" class="p-0"></label>
            <input asp-for="StudentClass" disabled class="form-control"></input>
            
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Student" asp-action="Index" class="btn btn-secondary border form-control">Back To List</a>
            </div>

        </div>
    </div>

</form>