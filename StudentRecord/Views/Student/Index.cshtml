@model List<Student>
<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2>
                Student Data
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" asp-controller="Student" class="btn btn-primary">Create New Data  <i class="bi bi-plus-circle"></i></a>
        </div>
    </div>
  
<table class="table table-bordered table-striped" >
    <tr>
        <th>
            ID
        </th>
        <th>
            Name
        </th>
        <th>
            Class
        </th>
        <th></th>
    </tr>
    @foreach(var obj in Model)
    {
        <tr >
            <td>
                @obj.StudentId
            </td>
            <td>
                @obj.StudentName
            </td>
            <td>
                @obj.StudentClass
            </td>
            <td>
                <div class="w-75 btn-group" role="group">
                    <a asp-action="Edit" asp-controller="Student" asp-route-StudentId="@obj.StudentId" class="btn btn-primary mx-2">Edit</a>
                        <a asp-action="Delete" asp-controller="Student" asp-route-StudentId="@obj.StudentId" class="btn btn-danger mx-2">Delete</a>
                </div>
                   
            </td>
        </tr>
    }


</table>
</div>